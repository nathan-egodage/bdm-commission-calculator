{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "clientIdSettingName": "AAD_CLIENT_ID",
          "clientSecretSettingName": "AAD_CLIENT_SECRET",
          "openIdIssuer": "https://login.microsoftonline.com/000a8b0a-e54c-4a59-8346-e7268038cd85/v2.0"
        },
        "userDetailsClaim": "preferred_username",
        "validate": {
          "allowedAudiences": ["5feffca4-2086-4129-8680-29c2207d0edb"]
        }
      }
    }
  },
  "routes": [
    {
      "route": "/.auth/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/assets/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/error",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"],
      "allowedPrincipals": {
        "identities": [
          "nathan@cloudmarc.com.au",
          "ddallariva@cloudmarc.com.au",
          "rocket@cloudmarc.com.au"
        ]
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/css/*", "/js/*", "/assets/*", "/.auth/*"]
  },
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/redirect"
    },
    "403": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/error?code=403"
    }
  }
}